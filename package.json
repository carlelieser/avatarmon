{
    "name": "avatarmon",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*",
        "services/*"
    ],
    "scripts": {
        "app:start": "npm run start -w @avatarmon/app",
        "app:android": "npm run android -w @avatarmon/app",
        "app:ios": "npm run ios -w @avatarmon/app",
        "app:web": "npm run web -w @avatarmon/app",
        "app:test": "npm run test -w @avatarmon/app",
        "app:typecheck": "npm run typecheck -w @avatarmon/app",
        "api:dev": "npm run dev -w @avatarmon/api",
        "api:build": "npm run build -w @avatarmon/api",
        "api:start": "npm run start -w @avatarmon/api",
        "api:test": "npm run test -w @avatarmon/api",
        "shared:typecheck": "npm run typecheck -w @avatarmon/shared",
        "test": "npm test --workspaces --if-present",
        "typecheck": "npm run typecheck --workspaces --if-present",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "prettier": "^3.7.4"
    },
    "dependencies": {
        "expo": "~54.0.30",
        "expo-crypto": "~15.0.8",
        "react": "19.1.0",
        "react-native": "0.81.5"
    }
}

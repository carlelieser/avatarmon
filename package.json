{
  "name": "avatarmon",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "app",
    "server"
  ],
  "scripts": {
    "app:start": "npm run start -w app",
    "app:android": "npm run android -w app",
    "app:ios": "npm run ios -w app",
    "app:web": "npm run web -w app",
    "app:test": "npm run test -w app",
    "app:typecheck": "npm run typecheck -w app",
    "server:dev": "npm run dev -w server",
    "server:build": "npm run build -w server",
    "server:start": "npm run start -w server",
    "server:test": "npm run test -w server",
    "dev": "concurrently \"npm run server:dev\" \"npm run app:start\"",
    "test": "npm test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "expo": "~54.0.30",
    "react": "19.1.0",
    "react-native": "0.81.5"
  }
}
